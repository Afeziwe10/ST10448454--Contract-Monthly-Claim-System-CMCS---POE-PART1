<Window x:Class="CMCS.Users.LectureRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Users"
        mc:Ignorable="d"
        Title="LectureRegistration" Height="650" Width="900" Background="{StaticResource Brush.Surface}" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Ellipse Width="400" Height="400" Fill="{StaticResource Brush.Primary}" Opacity="0.15" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Ellipse Width="400" Height="400" Fill="{StaticResource Brush.Primary}" Opacity="0.15" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="-36,0,0,-75"/>
        <Border Background="White" CornerRadius="20" Padding="40" Margin="200,100,200,10">
            <StackPanel>
                <TextBlock Text="Lecture Registration" FontSize="28" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock Text="Full Name:" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                <TextBox x:Name="txtFullName" Style="{StaticResource Input}" Height="40"/>

                <TextBlock Text="Email Address:" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                <TextBox x:Name="txtEmail" Style="{StaticResource Input}" Height="40"/>

                <TextBlock Text="Password:" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                <PasswordBox x:Name="txtPassword" BorderBrush="{StaticResource Brush.Secondary}" Height="40" BorderThickness="1.2" Background="White"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <Button x:Name="btnGenerateUsername" Style="{StaticResource SecondaryButton}" Width="180" Height="45" Content="Generate Username" Click="btnGenerateUsername_Click"/>
                    <TextBox x:Name="txtUsername" Style="{StaticResource Input}" Height="45" Width="200" Margin="15,0,0,0" IsReadOnly="True" Background="#F5F5F5" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}"/>
                </StackPanel>

                <Button x:Name="btnRegister" Content="Register" Style="{StaticResource PrimaryButton}" Height="50" FontSize="16" Click="btnRegister_Click"/>
                <Button x:Name="btnBack" Content="Back" Style="{StaticResource DestructiveButton}" Height="45" FontSize="14" Margin="0,10,0,0" Click="btnBack_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
