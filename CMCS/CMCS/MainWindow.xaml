<Window x:Class="CMCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:CMCS"
        mc:Ignorable="d"
        Title="CMCS" Height="600" Width="950" Background="{StaticResource Brush.Surface}" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Contract Monthly Claim System " Style="{StaticResource H1}" HorizontalAlignment="Center"/>
            <UniformGrid Columns="3">
                <Border Style="{StaticResource Card}" Background="{StaticResource Brush.Primary}" MouseLeftButtonUp="Lecture_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="School" Width="60" Height="40" Foreground="White"/>
                        <TextBlock Text="Lecture" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Background="{StaticResource Brush.Accent}" MouseLeftButtonUp="Coordinator_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountGroup" Width="60" Height="40" Foreground="White"/>
                        <TextBlock Text="Coordinator" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Background="{StaticResource Brush.Secondary}" MouseLeftButtonUp="Manager_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountTie" Width="60" Height="60" Foreground="White"/>
                        <TextBlock Text="Manager" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
