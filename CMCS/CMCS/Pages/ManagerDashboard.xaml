<Window x:Class="CMCS.Pages.ManagerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="ManagerDashboard" Height="600" Width="900" Background="{StaticResource Brush.Surface}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="{StaticResource Brush.Secondary}" Padding="16">
            <TextBlock Text="Manager Dashboard" FontSize="26" FontWeight="Bold" Foreground="White"/>
        </Border>

        <StackPanel Margin="30,80,30,30">
            <Button Style="{StaticResource PrimaryButton}" Background="{StaticResource Brush.Secondary}" Height="60" Margin="0,10,0,10" Click="VerifyReport_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FileCheck" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Verify Report" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource SecondaryButton}" Height="60" Margin="0,10,0,10" Click="SystemOverview_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ChartBar" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="System Overview" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DestructiveButton}" Background="{StaticResource Brush.Primary}" Height="60" Margin="0,10,0,10" Click="Logout_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Logout" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Logout" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Button x:Name="BtnMessages" Width="45" Height="45" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,20,20,0" Background="{StaticResource Brush.Accent}" BorderBrush="{StaticResource Brush.Primary}" BorderThickness="2" Click="BtnMessages_Clicks">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <materialDesign:PackIcon Kind="MessageBadge" Width="22" Height="22" Foreground="White"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
