<Window x:Class="CMCS.Pages.ReviewClaimPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="ReviewClaimPage" Height="450" Width="800">
    <Grid Background="{StaticResource Brush.Secondary}">
        <Border Background="{StaticResource Brush.Primary}" Height="80" VerticalAlignment="Top">
            <TextBlock Text="Review Lecture Claims" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold" Foreground="White"/>
        </Border>

        <DataGrid x:Name="ClaimsGrid" AutoGenerateColumns="False" Margin="40,100,40,40" RowHeight="80" IsReadOnly="True" CanUserResizeRows="False" AlternatingRowBackground="{StaticResource Brush.Accent}" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding CliamId}" Width="80"/>
                <DataGridTextColumn Header="Module" Binding="{Binding ModuleName}" Width="*"/>
                <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="80"/>
                <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>

                <DataGridTemplateColumn Header="Action" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource PrimaryButton}" Content="Approved" Width="90" Height="30" Margin="0,0,10,0"/>
                                <Button Style="{StaticResource DestructiveButton}" Content="Reject" Width="90" Height="30"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
