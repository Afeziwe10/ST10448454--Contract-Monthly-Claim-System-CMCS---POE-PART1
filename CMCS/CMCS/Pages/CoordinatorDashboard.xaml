<Window x:Class="CMCS.Pages.CoordinatorDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="CoordinatorDashboard" Height="600" Width="900" Background="{StaticResource Brush.Surface}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border Background="{StaticResource Brush.Accent}" Padding="16">
            <TextBlock Text="Coordinator Dashboard" FontSize="26" FontWeight="Bold" Foreground="White"/>
        </Border>

        <StackPanel Margin="30, 80, 30,30">
            <Button Style="{StaticResource PrimaryButton}" Background="{StaticResource Brush.Accent}" Height="60" Margin="0,10,0,10" Click="ReviewClaim_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ClipboardList" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Review Claim" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource SecondaryButton}" Background="{StaticResource Brush.Primary}"  Height="60" Margin="0,10,0,10" Click="ApproveOrReject_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="ThumbUp" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="Approve or Reject" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource DestructiveButton}" Background="{StaticResource Brush.Primary}" Height="60" Margin="0,10,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Logout" Width="28" Height="28" Foreground="White" Margin="0,0,10,0"/>
                    <TextBlock Text="logout" FontSize="18" Foreground="White"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
