<Window x:Class="CMCS.Pages.MessagesContactPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CMCS.Pages"
        mc:Ignorable="d"
        Title="MessagesContactPage" Height="600" Width="400" WindowStartupLocation="CenterScreen" Background="{StaticResource Brush.Surface}">
    <Grid>
        <Border Background="{StaticResource Brush.Primary}" Height="80" VerticalAlignment="Top">
            <TextBlock Text="Contacts" Foreground="White" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>

        <ListBox x:Name="ContactList" Margin="20, 100, 20,20" BorderBrush="{StaticResource Brush.Secondary}" BorderThickness="2" Background="White" SelectionChanged="ContactList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource Brush.Surface}" CornerRadius="10" Padding="10" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="40" Height="40" Fill="{StaticResource Brush.Primary}" Margin="5,0"/>
                            <TextBlock Text="{Binding FullName}" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#26676E"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
