<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Color.Primary">#26676E</Color>
    <Color x:Key="Color.Secondary"> #95C0BD</Color>
    <Color x:Key="Color.Accent">#E6B4AA</Color>
    <Color x:Key="Color.Surface">#D4DCDC</Color>

    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Secondary" Color="{StaticResource Color.Secondary}" />
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.White" Color="White"/>
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="#222"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="#555"/>
    <SolidColorBrush x:Key="Brush.Muted" Color="#EEE"/>
    <SolidColorBrush x:Key="Brush.Warm" Color="#E6B4AA"/>
</ResourceDictionary>